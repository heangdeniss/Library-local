        /* Footer Styling */
footer {
    background-color: #333;
    color: black;
    padding: 40px 20px;
    font-family: 'Poppins', sans-serif;
    border-top: 1px solid #ddd;
    text-align: center;
}

.footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
    margin-bottom: 20px;
}

.footer-links ul {
    list-style-type: none;
    padding: 0;
    display: flex;
    gap: 20px;
    margin: 0;
}

.footer-links ul li {
    display: inline-block;
}

.footer-links a {
    color: white;
    text-decoration: none;
    font-size: 16px;
    font-weight: 400;
    transition: color 0.3s ease;
}

.footer-links a:hover {
    color: #2575fc;
}

.footer-social {
    display: flex;
    gap: 20px;
    justify-content: center;
    margin-top: 10px;
}

.social-icons {
    list-style: none;
    display: flex;
    gap: 20px;
    padding: 0;
    margin: 0;
}

.social-icons li {
    display: inline-block;
}

.social-icon {
    font-size: 20px;
    color: white;
    transition: transform 0.3s ease, color 0.3s ease;
}

.social-icon:hover {
    transform: scale(1.2);
    color: #2575fc;
}

.footer-bottom {
    font-size: 14px;
    color: #bdbdbd;
    margin-top: 20px;
}

.footer-bottom p {
    margin: 0;
}

/* Mobile Responsiveness */
@media (max-width: 768px) {
    .footer-container {
        flex-direction: column;
        text-align: center;
    }

    .footer-links ul {
        margin-top: 15px;
        flex-direction: column;
        justify-content: center;
    }

    .footer-social {
        margin-top: 15px;
    }

    .footer-social .social-icon {
        font-size: 25px;
    }
    .footer-container{
        padding-top: 20px;
    }
}

