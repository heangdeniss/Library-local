<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles/index.css">
    <link rel="stylesheet" href="styles/analysis-statistic.css">
    <title>Machine Learning & AI - Library Management System</title>
</head>
<body><!-- Books Display Section -->
    <div class="books-section py-5">
        <div class="container">
            <% if (books && books.length > 0) { %>
                <div class="row">
                    <% books.forEach(book => { %>
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card book-card h-100 shadow-sm">
                                <div class="card-body d-flex flex-column">
                                    <div class="book-icon mb-3 text-primary">
                                        <i class="fas fa-file-pdf fa-3x"></i>
                                    </div>
                                    <h5 class="card-title"><%= book.title %></h5>
                                    <p class="card-text text-muted mb-2">
                                        <i class="fas fa-user me-2"></i><%= book.author %>
                                    </p>
                                    <p class="card-text flex-grow-1"><%= book.description || 'No description available' %></p>
                                    <div class="book-meta mb-3">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar me-1"></i>
                                            Added: <%= new Date(book.upload_date).toLocaleDateString() %>
                                        </small>
                                        <br>
                                        <small class="text-muted">
                                            <i class="fas fa-file-alt me-1"></i>
                                            Size: <%= Math.round(book.file_size / 1024 / 1024 * 100) / 100 %> MB
                                        </small>
                                    </div>
                                    <div class="mt-auto">
                                        <a href="/view-pdf/<%= book.id %>" class="btn btn-primary w-100">
                                            <i class="fas fa-eye me-2"></i>View Book
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="fas fa-robot fa-4x mb-3 text-muted"></i>
                    <h3>No Books Available</h3>
                    <p class="text-muted">There are currently no books available in this category.</p>
                    <p class="text-muted">Check back soon for updates!</p>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="js/analysis-statistic.js"></script>
</body>
</html>